<div id="<%= dom_id show_case %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= show_case.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this show case", show_case, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this show case', edit_show_case_path(show_case), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
